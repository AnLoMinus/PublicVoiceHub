{
  "name": "public-voice-hub",
  "version": "1.0.0",
  "description": "מערך פרויקטים מלא לקידום שקיפות ציבורית, צדק חברתי ואחדות אזרחית",
  "main": "index.html",
  "scripts": {
    "start": "http-server -p 8080 -o",
    "dev": "http-server -p 8080 -o --cors",
    "build": "npm run build:css && npm run build:js && npm run build:html",
    "build:css": "postcss web/assets/css/*.css -d dist/assets/css",
    "build:js": "webpack --mode production",
    "build:html": "cp -r web/* dist/",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "npm run lint:html && npm run lint:css && npm run lint:js && npm run lint:md",
    "lint:html": "htmlhint web/**/*.html",
    "lint:css": "stylelint web/assets/css/**/*.css",
    "lint:js": "eslint web/assets/js/**/*.js",
    "lint:md": "markdownlint README.md *.md",
    "lint:fix": "npm run lint:css -- --fix && npm run lint:js -- --fix",
    "format": "prettier --write web/**/*.{html,css,js,md}",
    "format:check": "prettier --check web/**/*.{html,css,js,md}",
    "validate": "npm run lint && npm run test",
    "security:check": "npm audit && npm run security:scan",
    "security:scan": "snyk test",
    "a11y:test": "pa11y http://localhost:8080",
    "perf:test": "lighthouse http://localhost:8080 --output html --output-path ./reports/lighthouse.html",
    "report:daily": "node tools/scripts/generate-daily-report.js",
    "report:weekly": "node tools/scripts/generate-weekly-report.js",
    "report:monthly": "node tools/scripts/generate-monthly-report.js",
    "report:yearly": "node tools/scripts/generate-yearly-report.js",
    "analytics:generate": "node tools/scripts/generate-analytics.js",
    "stats:generate": "node tools/scripts/generate-statistics.js",
    "summary:generate": "node tools/scripts/generate-summary.js",
    "clean": "rm -rf dist/ reports/ node_modules/.cache",
    "precommit": "npm run validate",
    "prepush": "npm run validate && npm run security:check"
  },
  "keywords": [
    "public-voice",
    "citizen-complaints",
    "transparency",
    "social-justice",
    "civic-engagement",
    "democracy",
    "hebrew",
    "israel",
    "open-source",
    "github"
  ],
  "author": {
    "name": "AnLoMinus",
    "email": "publicvoicehub@example.com",
    "url": "https://github.com/AnLoMinus"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AnLoMinus/PublicVoiceHub.git"
  },
  "bugs": {
    "url": "https://github.com/AnLoMinus/PublicVoiceHub/issues"
  },
  "homepage": "https://anlominus.github.io/PublicVoiceHub/",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "eslint": "^8.52.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "htmlhint": "^1.1.4",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "lighthouse": "^11.4.0",
    "markdownlint": "^0.35.0",
    "pa11y": "^7.0.0",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "prettier": "^3.0.3",
    "snyk": "^1.1248.0",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "bootstrap": "^5.3.2",
    "chart.js": "^4.4.0",
    "font-awesome": "^4.7.0",
    "jquery": "^3.7.1",
    "moment": "^2.29.4"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "web/assets/js/**/*.js",
      "!web/assets/js/vendor/**/*.js"
    ],
    "coverageReporters": ["text", "lcov", "html"],
    "coverageDirectory": "coverage"
  },
  "eslintConfig": {
    "extends": ["standard"],
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "indent": ["error", 2],
      "quotes": ["error", "single"],
      "semi": ["error", "always"]
    }
  },
  "stylelint": {
    "extends": ["stylelint-config-standard"],
    "rules": {
      "indentation": 2,
      "string-quotes": "single"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit",
      "pre-push": "npm run prepush"
    }
  },
  "lint-staged": {
    "*.{js,css,md}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.css": [
      "stylelint --fix",
      "git add"
    ],
    "*.md": [
      "markdownlint --fix",
      "git add"
    ]
  }
}
